<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Đặt màu nền cho button -->
    <solid android:color="@color/honey_yellow" />

    <!-- Đặt viền cho button -->
    <stroke
        android:width="2dp"
        android:color="@color/button_border_color" /> <!-- Độ dày viền -->

    <!-- Đặt các góc bo cho button -->
    <corners android:radius="8dp" /> <!-- Độ bo góc -->

    <!-- Đặt bóng cho button -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>
