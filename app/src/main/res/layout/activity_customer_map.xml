<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerMapActivity">
    <!-- Bản đồ -->
    <fragment
        android:id="@+id/id_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- RelativeLayout chứa các nút  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Nút Logout -->
            <Button
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/log_out"
                android:layout_margin="5dp"/>
            <!-- Nút History -->
            <Button
                android:id="@+id/history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/history_button"
                android:layout_margin="5dp"/>


            <!-- Nút Settings -->
            <Button
                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_button"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/driver_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/driver_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="20sp"
                android:src="@mipmap/icon_default_driver" />

            <LinearLayout
                android:id="@+id/driver_profile_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="40dp">

                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp" />

                <TextView
                    android:id="@+id/driver_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp" />

                <TextView
                    android:id="@+id/driver_car"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp" />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize="0.1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <RadioButton
                    android:id="@+id/xeMay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Xe máy"
                    android:background="@color/white_settingLayout"
                    android:paddingEnd="20dp"/>
                <RadioButton
                    android:id="@+id/oTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ô tô"
                    android:background="@color/white_settingLayout"
                    android:paddingEnd="20dp"/>
            </RadioGroup>

            <!-- Nút gọi ở dưới cùng màn hình -->
            <Button
                android:id="@+id/button_call_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_destination" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
