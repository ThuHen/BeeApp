<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerMapActivity">

    <!-- RelativeLayout chứa các nút và CardView -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="10dp">

        <!-- Nút Logout -->
        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_out" />

        <!-- Nút Settings -->
        <Button
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/setting_button" />

        <!-- CardView chứa Autocomplete Fragment -->
        <androidx.cardview.widget.CardView
            android:id="@+id/autocomplete_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting"
            android:layout_marginTop="12dp">

            <fragment
                android:id="@+id/autoComplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/driver_infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/driver_profile_image"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:padding="20sp"
            android:src="@mipmap/icon_default_user" />

        <LinearLayout
            android:id="@+id/driver_profile_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40sp">

            <TextView
                android:id="@+id/driver_Destination"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingBottom="10sp"
                android:text="@string/destination" />

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp" />

            <TextView
                android:id="@+id/driver_phone"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp" />

            <TextView
                android:id="@+id/driver_car"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bản đồ -->
    <fragment
        android:id="@+id/id_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Nút gọi ở dưới cùng màn hình -->
    <Button
        android:id="@+id/button_call_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/call_bee" />
</FrameLayout>
