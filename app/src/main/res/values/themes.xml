<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BeeApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Đặt màu nền cho ứng dụng -->
        <item name="android:windowBackground">@color/honey_milk_yellow</item>
        <!-- Đổi màu nền cho status bar -->
        <item name="android:statusBarColor">@color/honey_yellow</item>
        <!-- Cài đặt biểu tượng màu sáng cho status bar -->
        <item name="android:windowLightStatusBar">true</item>
<!--         Đặt màu nền cho Button-->
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>
    <!-- Style cho Button -->
    <style name="ButtonStyle" >
        <item name="android:background">@drawable/button_border</item>  <!-- Áp dụng Drawable cho Button -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>

    </style>
    <style name="TextViewStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">19sp</item> <!-- Thay đổi kích thước chữ -->
<!--        <item name="android:textColor">#000000</item> &lt;!&ndash; (Tùy chọn) Màu chữ &ndash;&gt;-->
    </style>

    <style name="Theme.BeeApp" parent="Base.Theme.BeeApp" />
</resources>